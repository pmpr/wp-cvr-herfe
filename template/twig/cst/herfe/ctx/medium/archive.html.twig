{% set row_class = 'mb-6' %}
{% set sidebar_first = 1 %}
{% extends get_cover_template('sidebarable') %}

{% block sidebar %}
    {{ parent() }}
    {% include get_template('../../magazines', _self) %}
{% endblock %}

{% block content %}

    {% embed get_cover_template('common/header/index') with {
        has_container: 0,
        hide_header_title: 1,
        title_attrs: {class: 'text-nowrap'}
    } %}
        {% block after_title %}
            {{ pmpr_do_action('browser_render', {
                title: pmpr_apply_filters('magazine_archive_browser_title', ''),
                items: pmpr_apply_filters('magazine_archive_browser_items', []),
                taxonomy: 'medium',
            }) }}
        {% endblock %}
    {% endembed %}

    {% include get_cover_template('common/archive/content') with {
        posts: have_posts(),
        lg_col: 4,
    } %}
{% endblock %}

