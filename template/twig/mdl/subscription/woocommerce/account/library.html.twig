{% if items is defined
    and items is not empty %}
    {{ render_if_has_content('h2', {class: 'h4 mb-5'}, title) }}
    <div class="row">
        {% for item in items %}
            <article class="col-12 col-lg-6 mb-5 d-flex">
                {{ wp_get_attachment_image(item.image, 'thumbnail')|raw }}
                <div class="ml-4 w-100 d-flex flex-column justify-content-between">
                    <div>
                        {{ render_if_has_content('h3', {class: 'h6 mb-2'}, item.title) }}
                        {% if item.post_title and item.permalink %}
                            <a href="{{ item.permalink|esc_attr }}" class="text-gray-secondary d-block mb-2">{{ item.post_title|raw }}</a>
                        {% endif %}
                    </div>
                    <a href="{{ item.view_link|raw }}" class="btn text-white bg-primary-secondary d-block"
                       title="{{ view_title|esc_attr }}" aria-label="{{ view_title|esc_attr }}">
                        {{ view_title|raw }}
                    </a>
                </div>
            </article>
        {% endfor %}
    </div>
{% else %}
    {{ empty_message|raw }}
{% endif %}
