{% extends get_cover_template('container') %}

{% block before_container %}
    {{ parent() }}
    <div class="single-content">
        {% embed get_cover_template('common/header/index') with {
            nowrap: 1,
        }%}
            {% block after_title %}
                {{ pmpr_do_action('after_archive_title') }}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

{% block inside_container %}

    {% include get_template('./content', _self) with {
        posts: have_posts()
    } %}

    {% include get_template('./comment', _self) %}

{% endblock %}


