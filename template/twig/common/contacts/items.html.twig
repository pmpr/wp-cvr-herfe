{% if items is defined and items is not empty %}

    <ul class="list-group list-group-flush{% if list_class is not empty %} {{ list_class|esc_attr }}{% endif %}">
        {% for key, item in items %}
            {% if item.value is defined
                and item.value is not empty %}
                <li class="list-group-item p-0 mb-4 border-0 bg-transparent">
                    {% include get_template('./item', _self) with item %}
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}

