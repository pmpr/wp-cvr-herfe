{% set has_container = has_container|default(1) %}
{% if jumbotron is defined and jumbotron is not empty %}
    {% if has_container %}
        <div class="container d-flex">
    {% endif %}
        {% include get_template('title', _self) with {
            title: jumbotron,
            title_size: 'md',
            large_title_size: 'lg'
        } %}
        {{ pmpr_do_action('after_page_title', object) }}
        {% block after_title %}{% endblock %}
    {% if has_container %}
        </div>
    {% endif %}
{% endif %}
