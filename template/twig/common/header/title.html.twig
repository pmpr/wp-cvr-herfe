{% set title_attrs = title_attrs|add('class', 'highlight-text primary-white px-3 py-2 d-table') %}
{% set title_attrs = title_attrs|add('class', ' mb-' ~ title_margin|default('0')) %}

{% set title_attrs = title_attrs|add('class', 'fs-' ~ title_size|default('md')) %}
{% if nowrap|default(0) %}

    {% set title_attrs = title_attrs|add('class', 'text-nowrap') %}
{% endif %}
{% if large_title_size is defined
    and large_title_size is not empty %}

    {% set title_attrs = title_attrs|add('class', 'fs-md-' ~ large_title_size) %}
{% endif %}

{{ render_if_has_content(heading|default('h1'), title_attrs, title) }}

